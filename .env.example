# Copy this file to `.env` and adjust values as needed.

# Psyche LLM service
PSYCHE_LLM_API_URL=http://127.0.0.1:5000/

# Logging and pacing
LOG_FILE=adam_behavior_log.csv
CYCLE_SLEEP=5
IMAGINE_TOP_K=3
LOG_LEVEL=INFO
PSYCHE_TIMEOUT=30
PSYCHE_RETRIES=2
PSYCHE_BACKOFF=0.5
MEMORY_UPSERT_BATCH=5

# Agent initialization (simple keys)
AGENT_MOOD=neutral
AGENT_LEVEL=0.1
AGENT_CURIOSITY=0.8
AGENT_BRAVERY=0.6
AGENT_CAUTION=0.7
AGENT_HUNGER=0.1
AGENT_GOAL=Find the source of the strange noises in the house.

# Agent initialization (full JSON override; uncomment to use)
# AGENT_STATUS_JSON={"emotional_state":{"mood":"anxious","level":0.4},"personality":{"curiosity":0.7,"bravery":0.4,"caution":0.8},"needs":{"hunger":0.15},"goal":"Calm the environment and rest."}

# Vector memory (optional; features degrade if unset)
SENTENCE_MODEL=all-MiniLM-L6-v2
PINECONE=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=project-adam-memory-text

OLLAMA_MODEL = "qwen3:1.7b"

MEMORY_BACKEND=chroma